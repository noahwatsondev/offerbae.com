// This represents a user of your application (e.g., an admin, content creator)
model User {
  id        String    @id @default(cuid()) // Using cuid() for consistency with other models
  email     String    @unique // Essential for authentication
  name      String?   // User's display name
  password  String    // Hashed password (ensure you store hashes, not plain text!)
  role      String    @default("ADMIN") // Example: "ADMIN", "EDITOR", "VIEWER"
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // If a User can create multiple Articles, add a relation here
  articles  Article[]
}
