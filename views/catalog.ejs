<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'OfferBae' %>
    </title>
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : '' %>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <% const getNum=(v)=> {
        if (v === undefined || v === null || v === '') return 0;
        if (typeof v === 'number') return v;
        const num = parseFloat(String(v).replace(/[^0-9.]/g, ''));
        return isNaN(num) ? 0 : num;
        };

        const formatPrice = (v) => {
        const num = getNum(v);
        if (num <= 0) return '--' ; return num.toLocaleString(undefined, { minimumFractionDigits: 2,
            maximumFractionDigits: 2 }); }; const checkIsSale=(price, salePrice)=> {
            const p = getNum(price);
            const s = getNum(salePrice);
            return s > 0 && p > s;
            };

            // Sort products for initial load
            if (typeof products !== 'undefined' && Array.isArray(products)) {
            products.sort((a, b) => {
            const isSaleA = checkIsSale(a.price, a.salePrice);
            const isSaleB = checkIsSale(b.price, b.salePrice);
            if (isSaleA && !isSaleB) return -1;
            if (!isSaleA && isSaleB) return 1;
            if (isSaleA && isSaleB) {
            const savingsA = getNum(a.price) - getNum(a.salePrice);
            const savingsB = getNum(b.price) - getNum(b.salePrice);
            return savingsB - savingsA;
            }
            return 0;
            });
            }
            %>

            <style>
                :root {
                    --primary: #FFD15C;
                    --primary-light: #FFF9E6;
                    --text-main: #111827;
                    --text-secondary: #4B5563;
                    --bg-body: #F9FAFB;
                    --card-bg: #FFFFFF;
                    --border: #E5E7EB;
                    --danger: #EF4444;
                    --success: #10B981;
                }

                * {
                    margin: 0;
                    padding: 0;
                    box-sizing: border-box;
                }

                body {
                    font-family: 'Outfit', sans-serif;
                    background: var(--bg-body);
                    color: var(--text-main);
                    line-height: 1.5;
                }

                header {
                    background: var(--card-bg);
                    border-bottom: 1px solid var(--border);
                    position: sticky;
                    top: 0;
                    z-index: 1000;
                    padding: 0.75rem 0;
                    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
                    min-height: 70px;
                    display: flex;
                    align-items: center;
                }

                .header-container {
                    max-width: 1400px;
                    margin: 0 auto;
                    padding: 0 2rem;
                    width: 100%;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }

                .container {
                    max-width: 1600px;
                    margin: 0 auto;
                    padding: 2rem;
                    display: grid;
                    grid-template-columns: 280px 1fr;
                    gap: 2rem;
                }

                @media (max-width: 1200px) {
                    .container {
                        grid-template-columns: 1fr;
                        padding: 1rem;
                    }

                    aside {
                        display: none;
                    }
                }

                aside {
                    background: #fff;
                    border-radius: 1rem;
                    padding: 1.5rem;
                    border: 1px solid var(--border);
                    height: fit-content;
                }

                .filter-group {
                    margin-bottom: 2rem;
                }

                .filter-title {
                    font-weight: 700;
                    font-size: 1rem;
                    margin-bottom: 1rem;
                    display: block;
                    border-left: 4px solid var(--primary);
                    padding-left: 0.75rem;
                }

                .product-grid {
                    display: grid;
                    grid-template-columns: repeat(5, 1fr);
                    gap: 1.25rem;
                    transition: opacity 0.3s;
                    position: relative;
                }

                @media (max-width: 1600px) {
                    .product-grid {
                        grid-template-columns: repeat(4, 1fr);
                    }
                }

                @media (max-width: 1280px) {
                    .product-grid {
                        grid-template-columns: repeat(3, 1fr);
                    }
                }

                @media (max-width: 768px) {
                    .product-grid {
                        grid-template-columns: repeat(2, 1fr);
                    }
                }

                @media (max-width: 480px) {
                    .product-grid {
                        grid-template-columns: 1fr;
                    }
                }

                .product-card {
                    background: var(--card-bg);
                    border-radius: 1rem;
                    overflow: hidden;
                    border: 1px solid var(--border);
                    transition: all 0.2s;
                    display: flex;
                    flex-direction: column;
                    text-decoration: none;
                    color: inherit;
                    height: 100%;
                }

                .product-card:hover {
                    border-color: var(--primary);
                    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                }

                .product-image-wrapper {
                    position: relative;
                    padding-bottom: 100%;
                    background: #fff;
                }

                .product-image {
                    position: absolute;
                    inset: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: contain;
                    padding: 1.25rem;
                }

                .sale-badge {
                    position: absolute;
                    top: 0.75rem;
                    left: 0.75rem;
                    background: var(--danger);
                    color: #fff;
                    padding: 0.2rem 0.6rem;
                    border-radius: 2rem;
                    font-size: 0.7rem;
                    font-weight: 800;
                    z-index: 10;
                }

                .product-info {
                    padding: 1rem;
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                }

                .brand-label {
                    font-size: 0.65rem;
                    font-weight: 700;
                    color: var(--primary);
                    text-transform: uppercase;
                    margin-bottom: 0.25rem;
                }

                .product-name {
                    font-size: 0.875rem;
                    font-weight: 600;
                    line-height: 1.3;
                    color: var(--text-main);
                    margin-bottom: 0.75rem;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    line-clamp: 2;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                    height: 2.6em;
                }

                .price-row {
                    margin-top: auto;
                }

                .current-price {
                    font-size: 1.125rem;
                    font-weight: 800;
                    color: var(--text-main);
                }

                .sale-price {
                    color: var(--danger);
                }

                .was-price {
                    text-decoration: line-through;
                    color: #9ca3af;
                    font-size: 0.75rem;
                    margin-left: 0.25rem;
                }

                .savings-info {
                    color: var(--success);
                    font-size: 0.7rem;
                    font-style: italic;
                    font-weight: 700;
                    margin-top: 1px;
                }

                .redeem-btn {
                    margin-top: 1rem;
                    width: 100%;
                    padding: 0.6rem;
                    border-radius: 0.6rem;
                    background: var(--primary-light);
                    color: #1a1a1a;
                    border: none;
                    font-weight: 700;
                    font-size: 0.8rem;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 0.4rem;
                    transition: all 0.2s;
                }

                .search-area {
                    display: flex;
                    align-items: center;
                    gap: 1rem;
                    margin-bottom: 1.5rem;
                    flex-wrap: wrap;
                }

                .search-input-wrapper {
                    position: relative;
                    flex: 1;
                    min-width: 300px;
                }

                .prod-search-input {
                    width: 100%;
                    padding: 0.75rem 1rem;
                    border-radius: 0.5rem;
                    border: 1px solid var(--border);
                    font-family: 'Outfit', sans-serif;
                    font-size: 0.938rem;
                    outline: none;
                    transition: border-color 0.2s;
                }

                .on-sale-label {
                    display: flex;
                    align-items: center;
                    gap: 0.5rem;
                    color: var(--danger);
                    font-weight: 700;
                    font-size: 0.938rem;
                    cursor: pointer;
                    user-select: none;
                }

                .loading-overlay {
                    position: absolute;
                    inset: 0;
                    background: rgba(255, 255, 255, 0.7);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    z-index: 50;
                    opacity: 0;
                    pointer-events: none;
                    transition: opacity 0.2s;
                }

                .loading-overlay.active {
                    opacity: 1;
                    pointer-events: all;
                }

                .pagination-container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    gap: 1rem;
                    margin-top: 4rem;
                }

                .pagination-btn {
                    padding: 0.75rem 2rem;
                    border-radius: 0.75rem;
                    border: 1px solid var(--border);
                    background: #fff;
                    color: var(--text-main);
                    font-weight: 700;
                    cursor: pointer;
                }

                .pagination-btn:disabled {
                    opacity: 0.5;
                    cursor: not-allowed;
                }

                @keyframes spin {
                    to {
                        transform: rotate(360deg);
                    }
                }

                /* Discounts Modal/Dropdown Styles */
                .discounts-btn {
                    display: flex;
                    align-items: center;
                    gap: 0.5rem;
                    padding: 0.625rem 1.25rem;
                    background: var(--primary);
                    color: #1a1a1a;
                    border: none;
                    border-radius: 3rem;
                    font-weight: 700;
                    font-size: 0.938rem;
                    cursor: pointer;
                    transition: all 0.2s;
                    box-shadow: 0 4px 12px rgba(255, 209, 92, 0.2);
                    margin-left: auto;
                    white-space: nowrap;
                }

                .discounts-btn:hover {
                    transform: translateY(-1px);
                    box-shadow: 0 6px 16px rgba(255, 209, 92, 0.3);
                }

                .discounts-dropdown {
                    display: none;
                    position: absolute;
                    top: calc(100% + 1rem);
                    right: 0;
                    width: 450px;
                    max-height: 500px;
                    background: #fff;
                    border-radius: 1.5rem;
                    border: 1px solid var(--border);
                    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                    z-index: 1100;
                    padding: 1.5rem;
                    overflow: hidden;
                    display: flex;
                    flex-direction: column;
                }

                @media (max-width: 768px) {
                    .discounts-dropdown {
                        position: fixed;
                        top: 0;
                        left: 0;
                        right: 0;
                        bottom: 0;
                        width: 100%;
                        max-height: 100vh;
                        border-radius: 0;
                        z-index: 2000;
                        padding: 1rem;
                    }

                    .header-container {
                        padding: 0 1rem;
                    }
                }

                .discounts-overlay {
                    display: none;
                    position: fixed;
                    inset: 0;
                    background: rgba(0, 0, 0, 0.4);
                    backdrop-filter: blur(4px);
                    z-index: 1050;
                }

                .discounts-overlay.active,
                .discounts-dropdown.active {
                    display: flex;
                }

                .offer-card {
                    background: #fff;
                    border: 1px solid var(--border);
                    border-radius: 1rem;
                    padding: 1.25rem;
                    cursor: pointer;
                    transition: all 0.2s;
                }

                .offer-card:hover {
                    border-color: var(--primary);
                    background: var(--primary-light);
                }
            </style>
